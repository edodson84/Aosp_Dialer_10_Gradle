<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fffafafa"
    android:clickable="true"
    android:elevation="8.0dip"
    android:orientation="horizontal"
    android:paddingStart="16.0dip"
    android:paddingTop="24.0dip"
    android:paddingEnd="24.0dip"
    android:paddingBottom="8.0dip"
    android:visibility="gone"
    app:behavior_hideable="true"
    app:behavior_skipCollapsed="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:layout_insetEdge="bottom">

    <ImageView
        android:id="@id/promotion_icon"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:contentDescription="TODO"
        app:tint="?android:colorPrimary" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32.0dip">

        <TextView
            android:id="@id/promotion_title"
            style="@style/Dialer.TextAppearance.Header2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@id/promotion_details"
            style="@style/Dialer.TextAppearance.Secondary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="16.0dip"
            android:lineSpacingMultiplier="1.5" />

        <Button
            android:id="@id/ok_got_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip"
            android:stateListAnimator="@null"
            android:text="@string/ok_got_it"
            android:textColor="@android:color/white"
            android:textSize="16.0sp" />
    </LinearLayout>
</LinearLayout>